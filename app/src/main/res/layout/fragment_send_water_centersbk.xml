<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:paddingBottom="30dp"
android:paddingTop="30dp"
tools:context=".fragments.SendWaterCentersbkFragment"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:layout_constraintHorizontal_bias="0.5"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintTop_toTopOf="parent">


    <TextView
        android:gravity="center"
        android:id="@+id/captchaInfo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/captcha"/>

    <ImageView
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:layout_gravity="center"
        android:id="@+id/sendCaptchaWaterCenterSbk"
        android:layout_width="280dp"
        android:layout_height="100dp"
        android:src="@android:color/background_light"
        android:contentDescription="@string/captcha" />

    <Button
        android:id="@+id/buttonToMainMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/toMainMenu" />

</LinearLayout>